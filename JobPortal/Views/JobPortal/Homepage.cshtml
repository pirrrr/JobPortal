@{
    Layout = "~/Views/Shared/_headerfooter.cshtml";
}

<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
    }

    header {
        background-color: #fda837;
        padding: 20px;
        color: white;
        text-align: center;
    }

    .hero {
        padding: 60px;
        text-align: center;
        background-color: #fff6e6;
    }

        .hero h1 {
            font-size: 28px;
            margin: 10px 0;
        }

    .search-bar {
        margin-top: 20px;
    }

        .search-bar input {
            padding: 10px;
            margin: 5px;
            width: 200px;
        }

    .section {
        padding: 30px;
        background-color: #fff;
    }

        .section h2 {
            margin-bottom: 20px;
            font-size: 24px;
        }

    .card {
        display: inline-block;
        background-color: #f9f9f9;
        padding: 15px;
        margin: 10px;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    footer {
        background-color: #222;
        color: white;
        text-align: center;
        padding: 20px;
    }
</style>
</head>
<body>

    <header>
        <h1>Student Job Portal</h1>
    </header>

    <div class="hero">
        <h1>Find a job that suits your skills</h1>
        <div class="search-bar">
            <input type="text" placeholder="Job Title or Keyword" />
            <input type="text" placeholder="Location" />
            <button style="padding: 10px;">Search</button>
        </div>
    </div>

    <div class="section">
        <h2>Most Popular Vacancies</h2>
        <div class="card">Software Engineer</div>
        <div class="card">Graphic Designer</div>
        <div class="card">Data Analyst</div>
        <div class="card">Marketing Intern</div>
    </div>

    <div class="section">
        <h2>Popular Categories</h2>
        <div class="card">Design</div>
        <div class="card">IT & Software</div>
        <div class="card">Healthcare</div>
        <div class="card">Sales</div>
    </div>

    <footer>
        <p>&copy; 2025 JobPortal - All rights reserved</p>
    </footer>

</body>
</html>


