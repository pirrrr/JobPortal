@{
    Layout = "~/Views/Shared/_headerfooter.cshtml";
}

<style>
    body {
        background-color: #FFA733;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .login-container {
        width: 300px;
        background-color: white;
        padding: 30px;
        border-radius: 10px; 
        text-align: center; 
    }

    h2 {
        font-weight: bold; 
    }

    input[type="text"], input[type="password"] {
        width: 100%; 
        padding: 10px; 
        margin: 10px 0 15px; 
        background-color: #e0e0e0; 
        border: none; 
        border-radius: 5px; 
        box-sizing: border-box; 
    }

    button {
        width: 100%; 
        padding: 10px; 
        font-weight: bold; 
        border: none; 
        border-radius: 5px; 
        cursor: pointer; 
    }

    .login-btn {
        background-color: #FFA733;
        color: white; 
    }

    .signup-btn {
        background-color: #e0e0e0; 
        color: black; 
        margin-top: 10px; 
    }
</style>
</head>
<body>
    <div class="login-container">
        <h2>LOGIN</h2>
        <form action="/path/to/login" method="post">
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit" class="login-btn">LOGIN</button>
        </form>
        <form action="/JobPortal/Register" method="get">
            <button type="submit" class="signup-btn">Sign Up</button>
        </form>
    </div>
</body>
</html>